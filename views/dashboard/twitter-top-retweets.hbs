<table class="graph-twitter-top-retweets">
    <colgroup>
        <col width="60%" />
        <col width="20%" />
        <col width="20%" />
    </colgroup>
    <thead>
        <tr>
            <th>Tweet</th>
            <th>Date</th>
            <th>Num of Tweets</th>
        </tr>
    </thead>
    <tbody>
    {{#each data}}
        <tr>
            <td><a href="{{id}}" rel="external">{{id}}</a></td>
            <td>{{created_at}}</td>
            <td>{{retweet_count}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>