    <h2 clafacebookPagesss="header accordion"><span class="icon-cog"></span> Settings <span class="arrow closed"></span></h2>
    <div class="section">
        <form id="dashboard-options" action=".">

            {{#with dashboard}}
            <input class="ds-title" type="text" placeholder="Title" value="{{title}}" />
            <textarea class="ds-description" placeholder="Description">{{description}}</textarea>
            {{/with}}

            <label for="source">Facebook Page:</label>
            <select class="ds-fb-source">
            {{#each facebookPages}}
                <option value="{{_id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
            {{/each}}
            </select>

            <label for="source">Twitter profile:</label>
            <select class="ds-tw-source">
            {{#each twitterProfiles}}
                <option value="{{_id}}" {{#if selected}}selected{{/if}}>@{{screen_name}}</option>
            {{/each}}
            </select>

            <label>Email reminder frequency:</label>
            <div class="frequency">
                <ul>
                    <li>
                        <input type="radio" name="ds-frequency" value="everyday" id="frequency-everyday" />
                        <label for="frequency-everyday">Every morning</label>
                    </li>
                    <li>
                        <input type="radio" name="ds-frequency" value="{{dashboard.frequencyDay}}" id="frequency-weekday" />
                        <label for="frequency-weekday">Every <span class="frequency-selected">{{dashboard.frequencyText}}</span>
                            <select class="ds-frequency-day">
                                <option value="mon">monday</option>
                                <option value="tue">tuesday</option>
                                <option value="wed">wednesday</option>
                                <option value="thu">thursday</option>
                                <option value="fri">friday</option>
                            </select>
                        </label>
                    </li>
                    <li>
                        <input type="radio" name="ds-frequency" value="everymonth" id="frequency-everymonth" />
                        <label for="frequency-everymonth">First day of the month</label>
                    </li>
                </ul>
            </div>

            <div class="email-settings">
                <label>Recipients (one per line):</label>
                <textarea class="ds-recipients" placeholder="name@example.com">{{dashboard.recipients}}</textarea>
            </div>

            <button class="btn btn-danger dashboard-delete">Delete dashboard</button>

        </form>
    </div>

